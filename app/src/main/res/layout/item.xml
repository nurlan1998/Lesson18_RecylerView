<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tvPressQuarter"
        android:focusable="false"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="8dp"
        android:padding="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvPressHouse"
        android:text="Квартал:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/tvPressHouse"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/tvPressQuarter"
        android:padding="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Дом:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/tvPressFlat"
        android:focusable="false"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPressHouse"
        android:text="Квартира:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/tvSelected3"
        app:layout_constraintTop_toBottomOf="@id/tvPressFlat"
        android:padding="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="056156165"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSign"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="32dp"
        android:text="Войти"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPressFlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>